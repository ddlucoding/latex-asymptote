%% Some color definitions.
\definecolor{BorderRed}{HTML}{FF1A1A}
\definecolor{LightRed}{HTML}{FFE6E6}
\definecolor{BorderOrange}{HTML}{FF6600}
\definecolor{LightOrange}{HTML}{FFDDCC}
\definecolor{BorderGreen}{HTML}{00E600}
\definecolor{LightGreen}{HTML}{B3FFB3}
\definecolor{BorderPink}{HTML}{FF66FF}
\definecolor{LightPink}{HTML}{FFE6FF}
\definecolor{LightPurple}{HTML}{F1E6FF}
\definecolor{BorderPurple}{HTML}{8C1AFF}
\definecolor{BorderBlue}{HTML}{00ACE6}
\definecolor{LightBlue}{HTML}{CCF2FF}
\definecolor{BorderDarkBlue}{HTML}{0CD6F5}
\definecolor{DarkLightBlue}{HTML}{CAF4FA}
\definecolor{BorderUnderTheSea}{HTML}{00E6B8}
\definecolor{LightUnderTheSea}{HTML}{B3FFF0}
\definecolor{WarningBorder}{HTML}{B30000}
\definecolor{WarningInterior}{HTML}{FFB3B3}
\definecolor{YellowInterior}{HTML}{EFF5C6}
\definecolor{YellowBorder}{HTML}{D3F00C}

\newtcolorbox{Concept}{
    colframe = BorderRed,
    colback = LightRed
}

\newtcolorbox{Theorem}{
    colframe = BorderOrange,
    colback = LightOrange
}

\newtcolorbox{Strategy}{
    enhanced,
    frame hidden,
    borderline west = {1.6pt}{1pt}{BorderGreen},
    colback = LightGreen
}

\newtcolorbox{Definition}{
    % This type of box maybe a bit more bland than it should be
    enhanced,
    frame hidden,
    borderline west = {2pt}{1pt}{gray},
    colback = gray!10!white
}

\newtcolorbox{Example}{
    enhanced,
    frame hidden,
    borderline north = {1.8pt}{1pt}{BorderPink},
    borderline south = {1.8pt}{1pt}{BorderPink},
    colback = LightPink,
}

\newtcolorbox{Proof}{
    enhanced,
    frame hidden,
    borderline north = {2pt}{1pt}{BorderPurple},
    colback = LightPurple
}

\newtcolorbox{Exercise}{
    enhanced,
    frame hidden,
    borderline north = {1.8pt}{1pt}{BorderBlue},
    borderline south = {1.8pt}{1pt}{BorderBlue},
    colback = LightBlue,
}

\newtcolorbox{Problem}{
    enhanced,
    frame hidden,
    borderline north = {1.8pt}{1pt}{BorderDarkBlue},
    borderline south = {1.8pt}{1pt}{BorderDarkBlue},
    colback = DarkLightBlue,
}

\newtcolorbox{Solution}{
    enhanced,
    frame hidden,
    borderline north = {1.8pt}{1pt}{BorderUnderTheSea},
    colback = LightUnderTheSea
}

\newtcolorbox{Note}{
    enhanced,
    frame hidden,
    borderline west  = {1.8pt}{1pt}{YellowBorder},
    colback = YellowInterior
}

\newtcolorbox{Warning}{
    enhanced,
    frame hidden,
    borderline west = {1.8pt}{1pt}{WarningBorder},
    colback = WarningInterior
}

